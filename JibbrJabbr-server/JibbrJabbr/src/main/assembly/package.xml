<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>${distro.id}</id>
	<!-- 
	Builds the self-contained server jar
	start-up dependencies are jarred at the top level so that the
	-jar option can be used to start the server, all of the core
	libraries are packed in META-INF/lib and the system sets
	itself up.
	
	The API is put into this top-level classloader so that it
	becomes the authoritative version for the entire runtime
	 -->
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<includes>
					<include>${project.groupId}:JibbrJabbr-api</include>
					<include>${project.groupId}:JibbrJabbr-kernel</include>
					<include>commons-daemon:commons-daemon</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>true</unpack>
			<unpackOptions>
				<includes>
					<include>jj/JJ.class</include>
					<include>jj/JJ$*.class</include>
					<include>jj/api/**</include>
					<include>org/apache/commons/daemon/**</include>
				</includes>
			</unpackOptions>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/META-INF/lib</outputDirectory>
			<excludes>
				<exclude>commons-daemon:commons-daemon</exclude>
				<exclude>${project.groupId}:JibbrJabbr-api</exclude>
			</excludes>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>false</unpack>
			<scope>runtime</scope>
		</dependencySet>
	</dependencySets>
</assembly>